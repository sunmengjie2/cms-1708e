					</httpConnector>
					<contextHandlers>
						<!-- <contextHandler implementation="org.eclipse.jetty.webapp.WebAppContext"> 
							<contextPath>/pic</contextPath> <baseResource>d:/pic/</baseResource> </contextHandler> -->
